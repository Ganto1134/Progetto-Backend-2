@model Scarpe.WebApp.Entities.Comment

@{
    ViewData["Title"] = "Commento";

    TempData["IdArticolo"] = TempData["IdArticolo"];
}

<h1>Commento la scarpa &laquo;@ViewBag.Article&raquo;</h1>

<h4>Commento all''</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Comment" asp-route-id="@ViewBag.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="10" cols="50"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
