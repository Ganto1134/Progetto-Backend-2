@model Scarpe.WebApp.Entities.Article

@{
    ViewData["Title"] = "Informazioni Extra";
}

<h1>@Model.Title</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedAt)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Commenta", actionName: "Edit", controllerName: "Home",
    routeValues: new { id = Model.Id }, htmlAttributes: new {@class = "btn btn-sm btn-info"}) |
    <a asp-action="Index" asp-controller="Home" class="btn btn-sm btn-secondary">Back to List</a>
</div>
@foreach (Scarpe.WebApp.Entities.Comment comment in ViewBag.Comments)
{
    <div>@comment.Content</div>
}